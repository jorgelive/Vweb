{% extends 'GoproVipacDbprocesoBundle::layout.html.twig' %}
{% block title %}Cargador Genérico{% endblock title %}
{% block titulo %}Cargador Genérico{% endblock titulo %}
{% block content %}
    <div id="archivo">
        {{ form(formulario) }}
        <h1>Agregar archivo</h1>
        <div id="cargadorArchivos">Subir Archivo</div>
    </div>


    <div id="archivos">
        <h1>Listado de Archivos</h1>
        <table id="listaArchivos">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Fecha de creación</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% if archivosAlmacenados|default %}
                {% for archivo in archivosAlmacenados %}
                    <tr data-id="{{ archivo.id }}">
                        <td class="nombre">{{ archivo.nombre }}</td>
                        <td>{{ archivo.creado | date('Y-m-d H:i:s') }}</td>
                        <td>
                            <a href="{{ path('carga_generico', {'archivoEjecutar': archivo.id}) }}">Procesar</a>
                            <a class="borrarFila" rel="{{ archivo.id }}" href="{{ path('archivo_delete',{'id':archivo.id})}}">Borrar</a>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

    {% if mensajes|default %}
        <div id="mensajes">
            <h1>Resultados del proceso</h1>
            <ul>
                {% for mensaje in mensajes %}
                    <li>{{ mensaje }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

{% endblock content %}




